  <%- include('../partials/header') %>
  
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>FLight No.</th>
        <th>Departure Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%=f._id %>"><button id="detailsbtn">DETAILS</button></a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
  
  <%- include('../partials/footer') %>