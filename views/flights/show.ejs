<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No.: </div>
  <div><%= flight.flightNo %></div>
  <div>Date of Departure: </div>
  <div><%= flight.departs %></div>


</section>
<!--Destinations Form-->
<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
  <div>
    <label>Destinations:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
  </div>  
  <div>
    <label>Date of Arrival:
        <input type="datetime-local" value="<%= arrivesDate %>" name="arrival">
    </label><br>
  </div>
    <input type="submit" value="Add Destination" name="Add Destination">
</form><br>

<!--Displaying Destinations on show page-->
<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>

  <!-- Displaying Tickets on show page -->
  <br><br><h2>Tickets</h2>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
  <% tickets.forEach(function(t) { %>
    <tr>
      <td><%= t.seat %></td>
      <td><%= t.price %></td>
    </tr>
  <% }); %>
</tbody>
</table>


  <!-- New Ticket Link -->
  <a href="/flights/<%= flight._id %>/tickets/new"><input type="submit" value="New Ticket" id="add-new-ticket"></a>


<%- include('../partials/footer') %>






